{# views/Utilisateur/new.html.twig #}
{% extends 'AdminBundle::admin_layout.html.twig' %}

{% block title %}
{# parent() : étendre le bloc parent #}
{{ parent() }} - {{ page_title }}
{% endblock %}

{% block stylesheets %}
{{ parent() }}
{% endblock %}

{% block body %}
<div class="row-fluid">
	<div class="span2">
	{% if etape %}
	    <h3>{{ etape }}</h3>
	{% endif %}
	</div>
	<div class="span6">
<h1>{{ page_title }}</h1>

<form action="{{ path('utilisateur_create') }}" method="post" {{ form_enctype(form) }} class="form-horizontal">
    
<!-- form : nom de la clé envoyée par le contrôleur -->
<div class="control-group">
{{ form_label(form.nom, 'Nom', {'label_attr' : {'class':'control-label'} }) }}
<div class="controls">
{{ form_widget(form.nom, {'attr' : {'placeholder' : 'Votre nom'} } ) }}
{{ form_errors(form.nom) }}
</div>
</div>

<div class="control-group">
{{ form_label(form.prenom, 'Prénom', {'label_attr' : {'class':'control-label'} }) }}
<div class="controls">
{{ form_widget(form.prenom, {'attr' : {'placeholder' : 'Votre prénom'} } ) }}
{{ form_errors(form.prenom) }}
</div>
</div>

<div class="control-group">
{{ form_label(form.adresse, 'Adresse', {'label_attr' : {'class':'control-label'} }) }}
<div class="controls">
{{ form_widget(form.adresse, {'attr' : {'placeholder' : 'Votre adresse'} } ) }}
{{ form_errors(form.adresse) }}
</div>
</div>

<div class="control-group">
{{ form_label(form.code_postal, 'Code postal', {'label_attr' : {'class':'control-label'} }) }}
<div class="controls">
{{ form_widget(form.code_postal, {'attr' : {'placeholder' : 'Code postal'} } ) }}
{{ form_errors(form.code_postal) }}
</div>
</div>

<div class="control-group">
{{ form_label(form.ville, 'Votre ville', {'label_attr' : {'class':'control-label'} }) }}
<div class="controls">
{{ form_widget(form.ville, {'attr' : {'placeholder' : 'Votre ville'} } ) }}
{{ form_errors(form.ville) }}
</div>
</div>

<div class="control-group">
{{ form_label(form.pays, 'Pays', {'label_attr' : {'class':'control-label'} }) }}
<div class="controls">
{{ form_widget(form.pays, {'attr' : {'placeholder' : 'Pays'} } ) }}
{{ form_errors(form.pays) }}
</div>
</div>


	    {{ form_rest(form)}}


<div class="control-group">
<div class="controls">
<a href="{{ path('utilisateur') }}" class="btn"><i class="icon-circle-arrow-left"></i> Retour à l'accueil</a>
<button type="submit" class="btn btn-success"><i class="icon-ok icon-white"></i> Valider</button>
</div>
</div>
</form>

	    <pre>
	    {{ dump(form) }}
	    </pre>
</div><!-- / .row-fluid .span6 -->

	<div class="span4">
	</div>
</div>
{% endblock %}