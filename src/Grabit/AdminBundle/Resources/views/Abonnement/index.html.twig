{# views/Abonnement/ibdex.html.twig #}
{% extends 'AdminBundle::admin_layout.html.twig' %}

{% block title %}
{# parent() : étendre le bloc parent #}
{{ parent() }} - {{ page_title }}
{% endblock %}

{% block stylesheets %}
{{ parent() }}
{% endblock %}

{% block body %}
<div class="row-fluid">
	<div class="span12">
<h1>{{ page_title }}</h1>

<table class="records_list table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Espace</th>
            <th>Prix</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('abonnement_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.nom }}</td>
            <td>{{ entity.espace }} Go</td>
            <td>{{ entity.prix }} &euro;/mois</td>
            <td>
		<div class="btn-group">
		    <a href="{{ path('abonnement_show', { 'id': entity.id }) }}" class="btn btn-small"><i class="icon-eye-open"></i> Voir</a>
		    <a href="{{ path('abonnement_edit', { 'id': entity.id }) }}" class="btn btn-small btn-success"><i class="icon-pencil icon-white"></i> Éditer</a>
		</div>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<div>
<div class="btn-group">
    <a href="{{ path('abonnement_new') }}" class="btn btn-large btn-success"><i class="icon-plus icon-white"></i> Ajouter un nouvel abonnement </a>
</div>
</div>
<hr />

</div> <!-- / .row-fluid .span12 -->
</div> <!-- / .row-fluid -->
{% endblock %}